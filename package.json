{
  "name": "io-dev-api-server",
  "version": "1.0.0",
  "description": "A mock server to help io-app development https://io.italia.it/",
  "main": "app.js",
  "api_beckend_specs": "https://raw.githubusercontent.com/pagopa/io-backend/v6.14.0/api_backend.yaml",
  "api_public_specs": "https://raw.githubusercontent.com/pagopa/io-backend/v6.14.0/api_public.yaml",
  "api_bonus_vacanze": "https://raw.githubusercontent.com/pagopa/io-backend/master/api_bonus.yaml",
  "content_specs": "https://raw.githubusercontent.com/pagopa/io-services-metadata/master/definitions.yml",
  "author": "Matteo Boschi",
  "license": "MIT",
  "private": false,
  "scripts": {
    "postinstall": "npm run generate:all",
    "dev": "nodemon",
    "test": "jest",
    "test-watch": "jest --watch",
    "lint": "tslint -p . -t verbose",
    "lint-autofix": "tslint -p . -t verbose --fix",
    "start": "ts-node src/start.ts",
    "prettify": "prettier --write \"src/**/*.ts*\"",
    "generate:models": "rimraf generated && rimraf generated/definitions/backend && mkdir -p generated/definitions/backend && gen-api-models --api-spec $npm_package_api_beckend_specs --out-dir ./generated/definitions/backend && gen-api-models --api-spec $npm_package_api_public_specs --out-dir generated/definitions/backend",
    "generate:content-definitions": "rimraf generated/definitions/content && mkdir -p generated/definitions/content && gen-api-models --api-spec $npm_package_content_specs --out-dir ./generated/definitions/content",
    "generate:pagopa-api-definitions": "rimraf generated/definitions/pagopa && mkdir -p generated/definitions/pagopa && gen-api-models --api-spec https://wisp2.pagopa.gov.it/pp-restapi-CD/v2/api-docs --out-dir ./generated/definitions/pagopa",
    "generate:bonus-vacanze-definitions": "rimraf generated/definitions/bonus_vacanze && mkdir -p generated/definitions/bonus_vacanze && gen-api-models --api-spec $npm_package_api_bonus_vacanze --out-dir ./generated/definitions/bonus_vacanze ",
    "generate:all": "npm-run-all generate:models generate:content-definitions generate:pagopa-api-definitions generate:bonus-vacanze-definitions"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true
  },
  "dependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/morgan": "^1.7.37",
    "@types/prettier": "^1.19.0",
    "@types/swagger-parser": "^7.0.1",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "crypto": "^1.0.1",
    "express": "^4.17.1",
    "italia-ts-commons": "^5.1.13",
    "italia-tslint-rules": "^1.1.3",
    "italia-utils": "^4.0.0",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "swagger-parser": "^8.0.3",
    "ts-node": "8.9.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.25",
    "@types/node": "^12.12.18",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "typescript": "^3.8.3"
  }
}
